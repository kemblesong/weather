<h1>Locations</h1>
<table class="table">
  <tr>
    <th>Name</th>
    <th>Latitude</th>
    <th>Longitude</th>
    <th>Postcode</th>
    <th>Last Updated</th>
  </tr>
  <% @locations.each do |l| %>
  <tr>
    <td><%= l.name %></td>
    <td><%= l.latitude %></td>
    <td><%= l.longitude %></td>
    <td><%= l.postcode %></td>
    <td><%= Time.at(Observation.where(location_id: l.id).order(observed_at: :desc).first.observed_at) %></td>
  </tr>
  <% end %>
</table>
