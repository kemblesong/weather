<h1>Weather data for <i><%= @location %></i> on <%= @date.strftime("%D") %></h1>
<table class="table">
  <tr>
    <th>Time</th>
    <th>Temperature</th>
    <th>Rainfall</th>
    <th>Wind Speed</th>
    <th>Wind Direction</th>
  </tr>
  <% @observations.each do |o| %>
  <tr>
    <td><%= Time.at(o.observed_at).strftime("%r") %></td>
    <td><%= o.get_measurement.temperature %></td>
    <td><%= o.get_measurement.rainfall %></td>
    <td><%= o.get_measurement.wind_speed %></td>
    <td><%= o.get_measurement.wind_direction %></td>
  </tr>
  <% end %>
</table>
